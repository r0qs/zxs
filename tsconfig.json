{
  "compilerOptions": {
    "outDir": "build",
    "target": "es5",
    "module": "commonjs", 
    "declaration":true,
    "sourceMap": true,   
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "lib": ["es2017", "dom"],
    "noImplicitUseStrict": true,
    "typeRoots": [
      "./node_modules/@types"
    ]
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "ts/**/*.ts"
  ]
}