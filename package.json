{
    "name": "@r0qs/zxs",
    "version": "0.1.0",
    "config": {
        "xapiandir": "xapian/xapian-core"
    },
    "scripts": {
        "compile": "node compilermmxapianapi.js",
        "build": "npm run compile && tsc",
        "test": "mocha-typescript-watch -p tsconfig.json build/test/test.js",
        "test-no-watch": "tsc -p tsconfig.json && mocha build/test/test.js",
        "preparelib": "cp -r build/xapian/* dist/ && node preparelibrary.js",
        "make-demo": "cp -r build/xapian/rmmxapianapi* dist/xapianasm* demo/",
        "docker:build": "docker build -t zxs -f Dockerfile .",
        "docker:genidx": "./docker-gen-index.sh"
    },
    "devDependencies": {
        "@testdeck/mocha": "0.2.0",
        "@types/chai": "^4.3.0",
        "@types/mocha": "^9.1.0",
        "@types/node": "^17.0.21",
        "chai": "^4.3.6",
        "mocha": "^9.2.1",
        "requirejs": "^2.3.6",
        "rxjs": "^7.5.5",
        "typescript": "^4.6.2"
    }
}
